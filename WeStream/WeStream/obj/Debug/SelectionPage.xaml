<Page
    x:Class="WeStream.SelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeStream"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='1' x:Name="streamPage" 
                Content="Create Stream" 
                HorizontalAlignment="Center" 
                Margin="137,254,109,329" 
                VerticalAlignment="Center" 
                Width="154"
                                        />

        <Button x:Name="viewPage" 
                Content="View a Stream" 
                HorizontalAlignment="Center" 
                Margin="137,304,109,279" 
                VerticalAlignment="Center" 
                Width="154"/>

        <Button x:ConnectionId='2' x:Name="backButton" 
                Content="Go Back" 
                HorizontalAlignment="Right" 
                Margin="0,0,25,25" 
                VerticalAlignment="Bottom"
                                        />

    </Grid>
</Page>

